{
  "name": "@hsjm/monorepo",
  "version": "1.0.0",
  "private": true,
  "author": "Stanley Horwood <stanley@hsjm.io>",
  "description": "Opinionated collection of common components, composables and utils for Vue projects.",
  "license": "MIT",
  "homepage": "https://github.com/hsjm-io/hsjm#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsjm-io/hsjm.git"
  },
  "scripts": {
    "dev": "pm2 restart ecosystem.config.js",
    "dev:stop": "pm2 stop /hsjm-.+/",
    "build": "pnpm recursive run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --coverage",
    "test:dev": "vitest --coverage",
    "test:ui": "vitest --ui"
  },
  "devDependencies": {
    "@hsjm/eslint-config": "^1.0.3",
    "@types/node": "^17.0.45",
    "c8": "^7.11.3",
    "consola": "^2.15.3",
    "defu": "^6.0.0",
    "eslint": "^8.17.0",
    "esno": "^0.14.1",
    "fast-glob": "^3.2.11",
    "pm2": "^5.2.0",
    "tslib": "^2.4.0",
    "tsup": "^5.12.9",
    "typescript": "^4.7.3",
    "vite": "^2.9.12",
    "vitest": "^0.15.1"
  },
  "tsup": {
    "outDir": "dist",
    "format": [
      "esm",
      "cjs"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "shims": true,
    "dts": true
  },
  "eslintConfig": {
    "ignorePatterns": [
      "dist",
      "node_modules",
      "LICENCE",
      ".github",
      ".vscode",
      "*.yaml",
      "*.mjs",
      "*.js"
    ],
    "extends": [
      "@hsjm/eslint-config/basic",
      "@hsjm/eslint-config/typescript"
    ]
  }
}
