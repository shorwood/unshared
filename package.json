{
  "name": "@unshared/monorepo",
  "type": "module",
  "version": "0.7.6",
  "license": "MIT",
  "private": true,
  "author": "Stanley Horwood <stanley@hsjm.io>",
  "homepage": "https://github.com/shorwood/unshared#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/shorwood/unshared.git"
  },
  "engines": {
    "node": ">=22.0.0",
    "pnpm": ">=10.0.0"
  },
  "packageManager": "pnpm@10.18.1",
  "pnpm": {
    "peerDependencyRules": {
      "allowAny": [
        "eslint",
        "typescript",
        "meow",
        "@typescript-eslint/parser",
        "zod"
      ]
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild"
    ]
  },
  "scripts": {
    "dev": "tsx ./packages/scripts/cli.uncli.ts build --watch true",
    "build": "NODE_OPTIONS=--max-old-space-size=8192 tsx ./packages/scripts/cli.uncli.ts build --generateIndexes true",
    "lint": "eslint --ignore-pattern examples --concurrency auto",
    "lint:ci": "eslint --cache --ignore-pattern examples",
    "lint:fix": "eslint --fix --cache",
    "test": "vitest --watch",
    "test:run": "vitest --run",
    "test:ci": "vitest --typecheck --run",
    "test:ui": "vitest --ui",
    "test:types": "vitest --typecheck",
    "test:coverage": "vitest --coverage",
    "commit": "tsx ./packages/scripts/cli.uncli.ts commit",
    "commit:lint": "commitlint --edit",
    "publish:ci": "tsx ./packages/scripts/cli.uncli.ts publish",
    "release": "tsx ./packages/scripts/cli.uncli.ts release"
  },
  "devDependencies": {
    "@commitlint/config-pnpm-scopes": "20.1.0",
    "@types/node": "24.9.1",
    "@unshared/eslint-config": "workspace:*",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "@vitest/utils": "3.2.4",
    "commitlint": "20.1.0",
    "eslint": "9.38.0",
    "happy-dom": "20.0.8",
    "husky": "9.1.7",
    "memfs": "4.49.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  }
}
