{
  "name": "@hsjm/monorepo",
  "version": "1.0.0",
  "private": true,
  "author": "Stanley Horwood <stanley@hsjm.io>",
  "description": "Opinionated collection of common components, composables and utils for Vue projects.",
  "license": "MIT",
  "homepage": "https://github.com/hsjm-io/hsjm#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsjm-io/hsjm.git"
  },
  "scripts": {
    "dev": "pnpm build:pre && tsup --watch --onSuccess 'pnpm build:post'",
    "build": "pnpm build:pre && tsup --minify --onSuccess 'pnpm build:post'",
    "build:pre": "esno ./scripts/buildPre.ts",
    "build:post": "esno ./scripts/buildPost.ts && pnpm build:lint",
    "build:lint": "eslint ./dist/*/package.json --fix --no-ignore",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@hsjm/eslint-config": "^1.0.3",
    "@types/node": "^17.0.23",
    "consola": "^2.15.3",
    "eslint": "^8.12.0",
    "esno": "^0.14.1",
    "fast-glob": "^3.2.11",
    "tslib": "^2.3.1",
    "tsup": "^5.12.4",
    "typescript": "^4.6.3"
  },
  "tsup": {
    "entry": [
      "packages/*/index.ts"
    ],
    "loader": {
      ".css": "default",
      ".jpg": "dataurl",
      ".png": "dataurl"
    },
    "format": [
      "esm",
      "cjs"
    ],
    "external": [
      "@hsjm/core",
      "@hsjm/shared",
      "@hsjm/firebase",
      "@vueuse/core",
      "@vueuse/shared",
      "vue-demi",
      "vue",
      "firebase",
      "firebase-admin",
      "firebase-functions",
      "@iconify/iconify",
      "@iconify/utils",
      "milsymbol",
      "@mapbox/mapbox-sdk",
      "leaflet",
      "unocss",
      "@unocss/preset-mini",
      "mock-require",
      "brain.js",
      "gpu.js"
    ],
    "splitting": false,
    "sourcemap": true,
    "metafile": true,
    "clean": false,
    "shims": false,
    "dts": true
  },
  "eslintConfig": {
    "ignorePatterns": [
      "dist",
      "node_modules",
      ".github",
      ".vscode",
      "*.yaml",
      "*.mjs",
      "*.js"
    ],
    "extends": [
      "@hsjm/eslint-config/basic",
      "@hsjm/eslint-config/typescript"
    ]
  }
}
