{
  "name": "@hsjm/monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Opinionated collection of common components, composables and utils for Vue projects.",
  "license": "MIT",
  "author": "Stanley Horwood <stanley@hsjm.io>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsjm-io/hsjm.git"
  },
  "scripts": {
    "build": "tsup --minify",
    "dev": "tsup --watch",
    "update:indexes": "esno ./scripts/updateIndexes.ts",
    "update:readmes": "esno ./scripts/updateReadmes.ts",
    "update:packages": "esno ./scripts/updatePackages.ts",
    "lint": "eslint .",
    "lint:fix": "pnpm lint --fix"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "@hsjm/eslint-config": "^1.0.3",
    "@iconify/iconify": "^2.2.0",
    "@iconify/utils": "^1.0.31",
    "@types/eslint": "^8.4.1",
    "@types/leaflet": "^1.7.9",
    "@types/lodash": "^4.14.180",
    "@types/node": "^17.0.23",
    "@vueuse/components": "^8.2.0",
    "@vueuse/core": "^8.2.0",
    "@vueuse/shared": "^8.2.0",
    "axios": "^0.26.1",
    "consola": "^2.15.3",
    "eslint": "^8.11.0",
    "esno": "^0.14.1",
    "fast-glob": "^3.2.11",
    "firebase": "^9.6.10",
    "leaflet": "^1.7.1",
    "lodash": "^4.17.21",
    "milsymbol": "^2.0.0",
    "tslib": "^2.3.1",
    "tsup": "^5.12.1",
    "typescript": "^4.6.3",
    "unplugin-vue-components": "^0.18.4",
    "vue": "^3.2.31",
    "vue-demi": "^0.12.4",
    "vue-router": "^4.0.14"
  },
  "tsup": [
    {
      "entry": [
        "packages/*/index.ts"
      ],
      "loader": {
        ".css": "default",
        ".jpg": "dataurl",
        ".png": "dataurl"
      },
      "format": [
        "esm",
        "cjs"
      ],
      "splitting": false,
      "sourcemap": true,
      "metafile": true,
      "clean": true,
      "dts": true
    }
  ],
  "pnpm": {
    "overrides": {
      "object-keys": "1.1.1",
      "node-ipc": "9.1.1"
    }
  },
  "eslintConfig": {
    "ignorePatterns": [
      "dist/**/*.js",
      "dist/**/*.mjs",
      "dist/**/*.d.js",
      "node_modules/",
      ".github/",
      ".vscode/",
      "pnpm*.yaml"
    ],
    "extends": [
      "@hsjm/eslint-config/basic",
      "@hsjm/eslint-config/typescript"
    ]
  }
}
