{
  "name": "@hsjm/monorepo",
  "version": "1.0.0",
  "private": true,
  "author": "Stanley Horwood <stanley@hsjm.io>",
  "description": "Opinionated collection of common components, composables and utils for Vue projects.",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hsjm-io/hsjm.git"
  },
  "scripts": {
    "dev": "pnpm build:pre && tsup --watch --onSuccess 'pnpm build:post'",
    "build": "pnpm build:pre && tsup --onSuccess 'pnpm build:post'",
    "build:post": "pnpm build:licences && pnpm build:packages && pnpm build:readmes",
    "build:pre": "pnpm build:indexes",
    "build:licences": "esno ./scripts/buildLicences.ts",
    "build:indexes": "esno ./scripts/buildIndexes.ts",
    "build:readmes": "esno ./scripts/buildReadmes.ts",
    "build:packages": "esno ./scripts/buildPackages.ts && eslint ./dist/**/package.json --fix --no-ignore",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "peerDependencies": {
    "@vue/composition-api": "^1.0.0-rc.1",
    "vue": "^2.0.0 || >=3.0.0"
  },
  "peerDependenciesMeta": {
    "@vue/composition-api": {
      "optional": true
    }
  },
  "dependencies": {
    "@firebase/app-compat": "^0.1.21",
    "@firebase/app-types": "^0.7.0",
    "@hsjm/components": "link:packages/components",
    "@hsjm/core": "link:packages/core",
    "@hsjm/eslint-config": "^1.0.3",
    "@hsjm/firebase": "link:packages/firebase",
    "@hsjm/fireworks": "link:packages/fireworks",
    "@hsjm/iconify": "link:packages/iconify",
    "@hsjm/leaflet": "link:packages/leaflet",
    "@hsjm/mapbox": "link:packages/mapbox",
    "@hsjm/milsymbol": "link:packages/milsymbol",
    "@iconify/iconify": "^2.2.0",
    "@iconify/utils": "^1.0.31",
    "@types/leaflet": "^1.7.9",
    "@types/lodash": "^4.14.180",
    "@types/node": "^17.0.23",
    "@vueuse/components": "^8.2.0",
    "@vueuse/core": "^8.2.0",
    "@vueuse/shared": "^8.2.0",
    "axios": "^0.26.1",
    "brain.js": "^2.0.0-beta.10",
    "chalk": "^5.0.1",
    "consola": "^2.15.3",
    "eslint": "^8.12.0",
    "esno": "^0.14.1",
    "fast-glob": "^3.2.11",
    "firebase": "^9.6.10",
    "firebase-admin": "^10.0.2",
    "firebase-functions": "^3.19.0",
    "gpu.js": "^2.15.2",
    "leaflet": "^1.7.1",
    "lodash": "^4.17.21",
    "marked": "^4.0.12",
    "milsymbol": "^2.0.0",
    "tslib": "^2.3.1",
    "tsup": "^5.12.1",
    "typescript": "^4.6.3",
    "vue": "^3.2.31",
    "vue-demi": "^0.12.4",
    "vue-router": "^4.0.14",
    "windicss": "^3.5.1"
  },
  "tsup": [
    {
      "entry": [
        "packages/*/index.ts"
      ],
      "loader": {
        ".css": "default",
        ".jpg": "dataurl",
        ".png": "dataurl"
      },
      "format": [
        "esm",
        "cjs"
      ],
      "splitting": false,
      "sourcemap": true,
      "metafile": true,
      "clean": true,
      "dts": true
    }
  ],
  "pnpm": {
    "overrides": {
      "object-keys": "1.1.1",
      "node-ipc": "9.1.1"
    }
  },
  "eslintConfig": {
    "ignorePatterns": [
      "dist",
      "node_modules/",
      ".github/",
      ".vscode/",
      "pnpm*.yaml"
    ],
    "extends": [
      "@hsjm/eslint-config/basic",
      "@hsjm/eslint-config/typescript"
    ]
  }
}
