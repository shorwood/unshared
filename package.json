{
  "name": "@unshared/monorepo",
  "type": "module",
  "license": "MIT",
  "private": true,
  "author": "Stanley Horwood <stanley@hsjm.io>",
  "homepage": "https://github.com/shorwood/unshared#readme",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/shorwood/unshared.git"
  },
  "scripts": {
    "build": "tsx ./scripts/build.ts",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest --watch",
    "test:ci": "vitest --run --typecheck --coverage",
    "test:ui": "vitest --ui",
    "test:types": "vitest --typecheck",
    "test:coverage": "vitest --coverage",
    "commit": "tsx ./scripts/commit.ts",
    "commit:lint": "commitlint --edit",
    "publish:ci": "tsx ./scripts/publish.ts",
    "preinstall": "node ./scripts/forcePnpm.js",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@commitlint/config-angular": "18.6.0",
    "@commitlint/config-conventional": "18.6.0",
    "@commitlint/config-pnpm-scopes": "18.4.4",
    "@rollup/plugin-terser": "0.4.4",
    "@types/eslint": "8.56.2",
    "@types/js-yaml": "4.0.9",
    "@types/node": "20.11.8",
    "@unshared/eslint-config": "workspace:*",
    "@unshared/fs": "workspace:*",
    "@unshared/functions": "workspace:*",
    "@unshared/unplugin": "workspace:*",
    "@vitest/coverage-v8": "1.3.1",
    "@vitest/ui": "1.3.1",
    "@vitest/utils": "1.3.1",
    "axios": "1.6.7",
    "commitlint": "18.6.0",
    "dotenv": "16.4.1",
    "eslint": "8.56.0",
    "happy-dom": "13.3.1",
    "husky": "9.0.6",
    "js-yaml": "4.1.0",
    "memfs": "4.6.0",
    "openai": "4.26.0",
    "rollup": "4.9.6",
    "rollup-plugin-dts": "6.1.0",
    "rollup-plugin-esbuild": "6.1.1",
    "tsx": "4.7.0",
    "types-pkg-json": "1.2.1",
    "types-tsconfig": "2.0.2",
    "typescript": "5.3.3",
    "vitest": "1.3.1"
  },
  "eslintConfig": {
    "extends": [
      "@unshared/eslint-config"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-pnpm-scopes"
    ],
    "rules": {
      "body-max-length": [
        2,
        "always",
        "Infinity"
      ]
    }
  }
}
