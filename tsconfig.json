{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "vitest/globals",
      "vitest/importMeta"
    ],
    "paths": {
      "@unshared/*": ["./packages/*"]
    }
  },
  "include": [
    "packages",
    "scripts",
    "examples",
    "tsup.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
